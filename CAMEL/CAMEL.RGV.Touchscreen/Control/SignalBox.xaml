<UserControl x:Class="CAMEL.RGV.Touchscreen.Control.SignalBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAMEL.RGV.Touchscreen.Control"
             xmlns:cvt="clr-namespace:CAMEL.RGV.Touchscreen.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Ellipse Name="elSignal" Fill="LightGray" Width="20" Height="20"/>
        <Label Name="lbParamName" Content="参数名称" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
    </Grid>
</UserControl>
