<UserControl x:Class="CAMEL.RGV.Touchscreen.Control.ParamBox2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAMEL.RGV.Touchscreen.Control"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Name="lbParamName" Content="参数名称" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Border BorderThickness="3" BorderBrush="Blue" Grid.Column="1" Width="100" Height="40">
            <Label Name="tbParamValue" Content="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 FontSize="20" FontWeight="Bold" Foreground="Green" MouseDown="TbParamValue_MouseDown" />
        </Border>
        <Label Name="lbParamUnit" Grid.Column="2" Content="单位" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
